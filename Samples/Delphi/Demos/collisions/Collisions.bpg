#------------------------------------------------------------------------------
VERSION = BWS.01
#------------------------------------------------------------------------------
!ifndef ROOT
ROOT = $(MAKEDIR)\..
!endif
#------------------------------------------------------------------------------
MAKE = $(ROOT)\bin\make.exe -$(MAKEFLAGS) -f$**
DCC = $(ROOT)\bin\dcc32.exe $**
BRCC = $(ROOT)\bin\brcc32.exe $**
#------------------------------------------------------------------------------
PROJECTS = boxedin.exe BoxSphere.exe facevsface.exe meshhit.exe \
  OcclusionQuery.exe octreedemo.exe RayBox.exe raycast.exe sphere.exe \
  TriangleBox.exe
#------------------------------------------------------------------------------
default: $(PROJECTS)
#------------------------------------------------------------------------------

boxedin.exe: boxedin\boxedin.dpr
  $(DCC)

BoxSphere.exe: BoxSphere\BoxSphere.dpr
  $(DCC)

facevsface.exe: facevsface\facevsface.dpr
  $(DCC)

meshhit.exe: meshhit\meshhit.dpr
  $(DCC)

OcclusionQuery.exe: OcclusionQuery\OcclusionQuery.dpr
  $(DCC)

octreedemo.exe: octree\octreedemo.dpr
  $(DCC)

RayBox.exe: RayBox\RayBox.dpr
  $(DCC)

raycast.exe: raycast\raycast.dpr
  $(DCC)

sphere.exe: sphere\sphere.dpr
  $(DCC)

TriangleBox.exe: TriangleBox\TriangleBox.dpr
  $(DCC)


